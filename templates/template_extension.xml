<root>

    <!-- Proper list template for vehicle weapon actions -->
    <template name="list_vehicleactions">
        <list_column>
            <allowcreate />
            <allowdelete />
            <columns width="200" fillwidth="true" />
        </list_column>
    </template>

    <!-- Optional right anchor for positioning -->
    <template name="anchor_listitem_rightvehicle">
        <genericcontrol name="rightanchor">
            <anchored position="insidetopright" offset="10,5" width="0" height="0" />
            <invisible />
        </genericcontrol>
    </template>

    <!-- Placeholder for detail lists (if used elsewhere) -->
    <template name="list_vehicledetails">
        <list_column>
            <child merge="delete" />
            <sortby merge="delete" />
        </list_column>
    </template>

</root>
