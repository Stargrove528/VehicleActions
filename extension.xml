    <properties>
        <name>Feature: MGT2 Vehicle Actions Extension</name>
        <version>1.0</version>
        <author>James Lillard (Stargrove)</author>
        <description>Adds an Actions tab to the Vehicle form for Mongoose Traveller 2e, similar to the Starship form.</description>
    </properties>

    <base>
        <!-- Ruleset dependencies -->
        <ruleset>MGT2</ruleset>
        <ruleset>CoreRPG</ruleset>

        <!-- <script name="VehicleActions" file="scripts/vehicle_actions.lua" />  -->
